<div id="bg_wedding_party"></div>
<div id="wedding_party">
<h1>The Wedding Party</h1>
</div>
<div class='wedding_party_home_link'>
<%= link_to 'home', controller: 'welcome', action: 'index' %>
</div>

<div class="groomsmen">
</div>
<div class="bridal_party">
</div>

<script type="text/javascript">
	
	    function appendWeddingPartyContainers (){
	        
	        var wpBridal = [
	        	{ 
	        		"name" : 'Chermaine',
	        		position : 'Matron of Honor'
	        	},

	        	{
	        		"name" : 'Amanda',
	        		position : 'Bridesmaid'
	        	},

	        	{
	        		"name" : 'Jasmine',
	        		position : 'Bridesmaid'
	        	},
	        	{
	        		"name" : 'Jenn',
	        		position : 'Bridesmaid'
	        	}

	        ]

	        function weddingPartyContainers(wpBridal){
	            return '<div class="wpContainers"> \
	            			<div class="wedding_party_names"><h2>'+wpBridal.name+'</h2></div> \
	            			<div class="style_declarations"></div> \
	                    </div>'
	        }

	        for(var i=0; i < wpBridal.length; i++){
	            $('.bridal_party').append(weddingPartyContainers(wpBridal[i]))
	            $('.groomsmen').append(weddingPartyContainers(wpBridal[i]))
	        }
	    }

	    function bgOverlay() {
    	 	var height = $(document).height()
    	 	$('#bg_wedding_party').css('height', height)   
	    }
	    	window.addEventListener("load", bgOverlay, false);
	    	window.addEventListener("resize", bgOverlay, false);

	appendWeddingPartyContainers()


</script>